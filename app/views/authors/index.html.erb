<p id="notice"><%= notice %></p>

<h1>Autores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.nombre %></td>
        <td><%= link_to 'Mostrar', author %></td>
        <td><%= link_to 'Editar', edit_author_path(author) %></td>
        <td><%= link_to 'Eliminar', author, method: :delete, data: { confirm: 'Are you sure?' } %>
        <td><%= link_to 'Nuevo libro', new_author_book_path(author) %></td>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

